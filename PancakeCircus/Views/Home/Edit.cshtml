@{
    ViewData["Title"] = "Take Inventory";
}
<h2>@ViewData["Title"].</h2>
<h3>@ViewData["Message"]</h3>

<div class="container">
    <h2>Inventory</h2>
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Item</th>
                <th>Amount Left</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>-Eggs</td>
                <td>10 cartons</td>
            </tr>
            <tr>
                <td>-Flour</td>
                <td>20 lbs</td>
            </tr>
            <tr>
                <td>+Add item...</td>
                <td></td>
            </tr>
        </tbody>
    </table>
</div>
