@{
    ViewData["Title"] = "Take Inventory";
}
@section scripts
{
<environment names="Development">
    <script src="~/js/home/edit.js"></script>
</environment>
<environment names="Staging,Production">
    <script src="~/js/home/edit.min.js"></script>
</environment>

}

<h2>@ViewData["Title"].</h2>
<h3>@ViewData["Message"]</h3>

<div id="editInv">
    <h2>Inventory</h2>
    <table class="table table-hover table-striped table-bordered">
        <thead>
        <tr>
            <th>Item</th>
            <th>Amount Left</th>
        </tr>
        </thead>
        <tbody>
        <tr v-for="item in items">
            <td><button type="button" class="btn btn-danger" v-on:click="removeItem(item)">Remove</button> {{ item.name }}</td>
            <td>{{ item.amount }} {{ item.units }} <button type="button" class="btn btn-success" v-on:click="incrementItem(item)">+</button><button type="button" class="btn btn-danger" v-on:click="decrementItem(item)">-</button></td>
        </tr>
        <tr>
            <td><button type="button" class="btn btn-success" data-toggle="modal" data-target="#addItemModal">Add Item</button></td>
            <td></td>
        </tr>
        </tbody>
    </table>
</div>

<!-- Add Item Dialog -->
<div id="addItemModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add new Item</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <input type="text" class="form-control" id="itemName" placeholder="Item Name" />
                    <br/>
                    <input type="number" class="form-control" id="itemInitAmount" placeholder="Initial Amount" min="0" />
                    <br />
                    <input type="text" class="form-control" id="itemUnits" placeholder="Unit Type" />                    
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success" data-dismiss="modal" onclick="addNewItem();">Add</button>
            </div>
        </div>
    </div>
</div>